DOXYFILE_ENCODING = UTF-8

# project metadata
PROJECT_NAME = "Pilot Wave"
PROJECT_NUMBER = "@PROJECT_VERSION@"
PROJECT_BRIEF = "Visualize 3D quantum wavefunctions using pilot wave theory."


# input
INPUT = "@PROJECT_SOURCE_DIR@/src" "@PROJECT_SOURCE_DIR@/README.md" "@PROJECT_SOURCE_DIR@/include"
RECURSIVE = YES
FILE_PATTERNS = *.cpp *.h *.md

USE_MDFILE_AS_MAINPAGE = "@PROJECT_SOURCE_DIR@/README.md"


# output
OUTPUT_DIRECTORY = "@CMAKE_CURRENT_BINARY_DIR@"
GENERATE_HTML = YES
GENERATE_LATEX = YES


# General documentation settings
FULL_PATH_NAMES = YES
STRIP_FROM_PATH = "@PROJECT_SOURCE_DIR@/src" "@PROJECT_SOURCE_DIR@"
STRIP_FROM_INC_PATH = "@PROJECT_SOURCE_DIR@/include"

EXTRACT_ALL = YES
STRIP_CODE_COMMENTS = NO

ALPHABETICAL_INDEX = YES
SORT_MEMBER_DOCS = YES
SORT_BRIEF_DOCS = YES
SORT_BY_SCOPE_NAME = YES

BUILTIN_STL_SUPPORT = YES


# html settings
GENERATE_TREEVIEW = YES
FULL_SIDEBAR = YES

MARKDOWN_SUPPORT = YES
AUTOLINK_SUPPORT = YES

USE_MATHJAX = YES
MATHJAX_VERSION = MathJax_2


# latex settings
USE_PDFLATEX = YES
PDF_HYPERLINKS = YES

# CLI output and settings
QUIET = NO
WARNINGS = YES
WARN_IF_UNDOCUMENTED = NO
WARN_AS_ERROR = NO
